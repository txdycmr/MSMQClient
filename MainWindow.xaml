<Window x:Class="MSMQClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnStart" Click="btnStart_Click" Content="Start" Grid.Row="0" Height="40" Width="120"/>
        <Button x:Name="btnStop" Click="btnStop_Click" Content="Stop" Grid.Row="1" Height="40" Width="120"/>
    </Grid>
</Window>
